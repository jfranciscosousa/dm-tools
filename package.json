{
  "name": "dm-tools",
  "type": "module",
  "scripts": {
    "dev": "vite dev",
    "build": "vite build",
    "preview": "vite preview",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch --noEmit",
    "lint": "eslint .",
    "format": "prettier --write .",
    "test": "playwright test",
    "start": "deno run --allow-env --allow-read --allow-net build/index.js",
    "ci": "pnpm run lint && pnpm run check && pnpm run build && pnpm run test"
  },
  "devDependencies": {
    "@eslint/compat": "^1.2.7",
    "@eslint/js": "^9.22.0",
    "@playwright-testing-library/test": "^4.5.0",
    "@playwright/test": "^1.51.0",
    "@sveltejs/kit": "^2.19.0",
    "@sveltejs/vite-plugin-svelte": "^5.0.3",
    "@tailwindcss/typography": "^0.5.16",
    "@tailwindcss/vite": "^4.0.12",
    "@types/lodash-es": "^4.17.12",
    "@types/sanitize-html": "^2.13.0",
    "@types/showdown": "^2.0.6",
    "@typescript-eslint/eslint-plugin": "^8.26.0",
    "daisyui": "^5.0.0",
    "eslint": "^9.22.0",
    "eslint-config-prettier": "^10.1.1",
    "eslint-plugin-prettier": "^5.2.3",
    "eslint-plugin-svelte": "^3.0.3",
    "globals": "^16.0.0",
    "prettier": "^3.5.3",
    "prettier-plugin-svelte": "^3.3.3",
    "svelte": "^5.22.6",
    "svelte-adapter-deno": "^0.9.1",
    "svelte-check": "^4.1.5",
    "tailwindcss": "^4.0.12",
    "typescript": "^5.8.2",
    "typescript-eslint": "^8.26.0",
    "vite": "^6.2.1"
  },
  "dependencies": {
    "dexie": "^4.0.11",
    "dexie-observable": "4.0.1-beta.13",
    "lodash-es": "^4.17.21",
    "openai": "^4.86.2",
    "sanitize-html": "^2.15.0",
    "showdown": "^2.1.0",
    "zod": "^3.24.2",
    "zod-to-json-schema": "^3.24.3"
  }
}
