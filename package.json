{
  "name": "dm-tools",
  "type": "module",
  "scripts": {
    "dev": "vite dev",
    "build": "vite build",
    "preview": "vite preview",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch --noEmit",
    "lint": "prettier --check . && eslint --ignore-path .gitignore .",
    "format": "prettier --write .",
    "test": "playwright test",
    "start": "deno run --allow-env --allow-read --allow-net build/index.js",
    "ci": "pnpm run lint && pnpm run check && pnpm run build && pnpm run test"
  },
  "devDependencies": {
    "@playwright-testing-library/test": "^4.5.0",
    "@playwright/test": "^1.47.2",
    "@sveltejs/kit": "^2.6.1",
    "@sveltejs/vite-plugin-svelte": "^3.1.2",
    "@tailwindcss/typography": "^0.5.15",
    "@types/lodash-es": "^4.17.12",
    "@typescript-eslint/eslint-plugin": "^8.8.0",
    "@typescript-eslint/parser": "^8.8.0",
    "autoprefixer": "^10.4.20",
    "cssnano": "^7.0.6",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-svelte": "^2.44.1",
    "postcss": "^8.4.47",
    "prettier": "^3.3.3",
    "prettier-plugin-svelte": "^3.2.7",
    "svelte": "^4.2.19",
    "svelte-adapter-deno": "^0.9.1",
    "svelte-check": "^4.0.4",
    "svelte-preprocess": "^6.0.3",
    "tailwindcss": "^3.4.13",
    "typescript": "^5.6.2",
    "vite": "^5.4.8"
  },
  "dependencies": {
    "daisyui": "^4.12.12",
    "dexie": "^4.0.8",
    "dexie-observable": "4.0.1-beta.13",
    "lodash-es": "^4.17.21",
    "openai": "^4.67.1",
    "zod": "^3.23.8",
    "zod-to-json-schema": "^3.23.3"
  }
}
